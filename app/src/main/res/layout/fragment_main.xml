<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/mainActivity_IntegralMethods_Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Integral methods" />

        <Button
            android:id="@+id/mainActivity_SystemSolvingMethods_Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="System solving methods" />

        <Button
            android:id="@+id/mainActivity_OptimizationMethods_Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Optimization methods" />

        <Button
            android:id="@+id/mainActivity_MatrixCalc_Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Matrix calculator" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>